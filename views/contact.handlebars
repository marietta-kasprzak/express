<html lang='en' dir='ltr'>
  <head>
    <meta charset='utf-8' />
    <title>Contact</title>
  </head>

  <body>
    <h2 class="contact">Contact me</h2>
    {{#if isSent}}
      <div class='isSent'>
        This message has been sent!
        <br />
        File
        {{fileName}}
        had been sent!
      </div>
    {{/if}}
    {{#if fileName}}
      <div>
        <img src='/images/uploads/{{fileName}}' />
      </div>
    {{/if}}
    {{#if isError}}
      <div class='isError'>You can't leave this field empty</div>
    {{/if}}
    <form
      action='/contact/send-message'
      method='POST'
      enctype='multipart/form-data'
    >
      <label>
        Your name:
        <input type='text' name='author' />
      </label>
      <label>
        Your email:
        <input type='email' name='sender' />
      </label>
      <label>
        Title:
        <input type='text' name='title' />
      </label>
      <label>
        Project design:
        <input type='file' name='image' accept='.jpg, .png, .jpeg, .gif' />
      </label>
      <label>
        Message:
        <textarea name='message'></textarea>
      </label>
      <button type='submit'>Send message</button>

    </form>
  </body>
</html>